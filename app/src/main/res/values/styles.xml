<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- BUTTONS -->
    <style name="Widget.Trenuci.Button.Primary" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@color/primary_button_background</item>
        <item name="android:textColor">@color/primary_button_text_color</item>
        <item name="rippleColor">@color/primary_button_hover_background</item>
    </style>

    <style name="Widget.Trenuci.Button.Blue" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@color/primary_blue_color</item>
        <item name="android:textColor">@color/primary_white_color</item>
        <item name="rippleColor">@color/secondary_blue_color</item>
    </style>

    <style name="Widget.Trenuci.Button.Red" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@color/primary_red_color</item>
        <item name="android:textColor">@color/primary_white_color</item>
        <item name="rippleColor">@color/secondary_red_color</item>
    </style>

    <style name="Widget.Trenuci.Button.Green" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@color/primary_green_color</item>
        <item name="android:textColor">@color/primary_white_color</item>
        <item name="rippleColor">@color/secondary_green_color</item>
    </style>

    <!-- CARDS -->
    <style name="Widget.Trenuci.Card.Default" parent="Widget.MaterialComponents.CardView">
        <item name="cardBackgroundColor">@color/card_background</item>
        <item name="cardElevation">4dp</item>
        <item name="strokeColor">@color/primary_yellow_color</item>
        <item name="strokeWidth">2dp</item>
        <item name="cardCornerRadius">8dp</item>
    </style>

</resources>
