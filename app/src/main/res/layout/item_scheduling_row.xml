<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    app:cardUseCompatPadding="true"
    app:cardCornerRadius="16dp"
    app:cardElevation="2dp"
    app:strokeWidth="1dp"
    app:strokeColor="?attr/colorOnSurface">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp"
        android:orientation="vertical">

        <!-- Naslov: naziv događaja -->
        <TextView
            android:id="@+id/tvName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Subtitle1"
            android:text="Naziv događaja" />

        <!-- Red: korisnik • datum • broj gostiju -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="6dp"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/tvUser"
                android:layout_width="0dp"
                android:layout_weight="1.4"
                android:layout_height="wrap_content"
                android:text="Ime Prezime" />

            <TextView
                android:id="@+id/tvDate"
                android:layout_width="0dp"
                android:layout_weight="1.0"
                android:layout_height="wrap_content"
                android:text="15.08.2025" />

            <TextView
                android:id="@+id/tvPeople"
                android:layout_width="0dp"
                android:layout_weight="0.6"
                android:layout_height="wrap_content"
                android:textAlignment="viewEnd"
                android:text="4" />
        </LinearLayout>

        <!-- Akcije -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="end"
            android:paddingTop="8dp">

            <ImageButton
                android:id="@+id/btnApprove"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:contentDescription="@string/scheduling_action_approve"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@android:drawable/checkbox_on_background" />

            <ImageButton
                android:id="@+id/btnDecline"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:contentDescription="@string/scheduling_action_decline"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@android:drawable/ic_delete" />
        </LinearLayout>

    </LinearLayout>
</com.google.android.material.card.MaterialCardView>
